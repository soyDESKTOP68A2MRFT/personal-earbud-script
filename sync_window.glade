<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.0"/>
  <object class="GtkWindow" id="main_window">
    <property name="default_width">400</property>
    <property name="default_height">50</property>
    <property name="title">Control Audífonos</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <child>
          <object class="GtkLabel" id="message_label">
            <property name="label">Presiona para sincronizar</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="sync_button">
            <property name="label">Sincronizar Audífonos</property>
            <signal name="clicked" handler="on_button_sync_clicked" swapped="no"/>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="connect_button">
            <property name="label">Conectar Audífonos</property>
            <signal name="clicked" handler="on_button_connect_clicked" swapped="no"/>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="disconnect_button">
            <property name="label">Desconectar Audífonos</property>
            <signal name="clicked" handler="on_button_disconnect_clicked" swapped="no"/>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>


